<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sản phẩm</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            color: #000000;
            padding: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        h1 {
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 2px solid #000;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            border: 2px solid #000;
            background-color: #000;
            color: #fff;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }
        .btn:hover {
            background-color: #fff;
            color: #000;
        }
        .btn-secondary {
            background-color: #fff;
            color: #000;
        }
        .btn-secondary:hover {
            background-color: #000;
            color: #fff;
        }
        .btn-danger {
            background-color: #fff;
            color: #000;
            border-color: #666;
        }
        .btn-danger:hover {
            background-color: #666;
            color: #fff;
            border-color: #666;
        }
        .actions {
            margin-bottom: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 2px solid #000;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #000;
        }
        th {
            background-color: #000;
            color: #fff;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f5f5f5;
        }
        .product-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border: 1px solid #000;
        }
        .no-image {
            width: 80px;
            height: 80px;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #000;
            font-size: 12px;
            color: #666;
        }
        .price {
            font-weight: bold;
        }
        .action-btns {
            display: flex;
            gap: 10px;
        }
        .action-btns form {
            margin: 0;
        }
        .empty-message {
            text-align: center;
            padding: 60px 20px;
            border: 2px solid #000;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>QUẢN LÝ SẢN PHẨM</h1>
        
        <div class="actions">
            <a href="/products/create" class="btn">+ Thêm sản phẩm mới</a>
        </div>

        <% if (products && products.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <% if (product.url_image) { %>
                                    <img src="<%= product.url_image %>" alt="<%= product.name %>" class="product-image">
                                <% } else { %>
                                    <div class="no-image">Không có ảnh</div>
                                <% } %>
                            </td>
                            <td><%= product.name %></td>
                            <td class="price"><%= product.price.toLocaleString('vi-VN') %> đ</td>
                            <td><%= product.quantity %></td>
                            <td>
                                <div class="action-btns">
                                    <a href="/products/edit/<%= product.id %>" class="btn btn-secondary">Sửa</a>
                                    <form action="/products/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="empty-message">
                <h2>Chưa có sản phẩm nào</h2>
                <p>Hãy thêm sản phẩm đầu tiên!</p>
            </div>
        <% } %>
    </div>
</body>
</html>
