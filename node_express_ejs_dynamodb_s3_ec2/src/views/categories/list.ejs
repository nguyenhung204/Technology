<%- include('../partials/header', { title: 'Danh mục', activeMenu: 'categories' }) %>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }
    .card {
        background: white;
        border: 1px solid #000;
        padding: 20px;
        margin-bottom: 20px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #000;
    }
    th {
        background: white;
        font-weight: 600;
        color: #000;
        border-bottom: 2px solid #000;
    }
    tr:hover {
        background: #f0f0f0;
    }
    .actions {
        display: flex;
        gap: 10px;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }
    .empty-state img {
        width: 150px;
        opacity: 0.3;
        margin-bottom: 20px;
    }
</style>

<div class="page-header">
    <h1>Danh mục sản phẩm</h1>
    <% if (currentUser && currentUser.role === 'admin') { %>
        <a href="/categories/create" class="btn btn-primary">Thêm danh mục</a>
    <% } %>
</div>

<div class="card">
    <% if (categories && categories.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th style="width: 40%;">Tên danh mục</th>
                    <th style="width: 35%;">Mô tả</th>
                    <th style="width: 10%; text-align: center;">Số sản phẩm</th>
                    <% if (currentUser && currentUser.role === 'admin') { %>
                        <th style="width: 15%; text-align: center;">Thao tác</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><strong><%= category.name %></strong></td>
                        <td><%= category.description || '(Không có mô tả)' %></td>
                        <td style="text-align: center;">
                            <span style="background: white; color: #000; padding: 4px 12px; border: 1px solid #000; font-weight: 600;">
                                <%= category.productCount || 0 %>
                            </span>
                        </td>
                        <% if (currentUser && currentUser.role === 'admin') { %>
                            <td>
                                <div class="actions" style="justify-content: center;">
                                    <a href="/categories/<%= category.id %>/edit" class="btn btn-primary" style="padding: 6px 12px; font-size: 13px;">Sửa</a>
                                    <form action="/categories/<%= category.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn xóa danh mục này?<%= category.productCount > 0 ? ' Có ' + category.productCount + ' sản phẩm thuộc danh mục này.' : '' %>');">>
                                        <button type="submit" class="btn btn-danger" style="padding: 6px 12px; font-size: 13px;">Xóa</button>
                                    </form>
                                </div>
                            </td>
                        <% } %>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="empty-state">
            <h3>Chưa có danh mục nào</h3>
            <p>Hãy thêm danh mục đầu tiên để bắt đầu phân loại sản phẩm</p>
            <% if (currentUser && currentUser.role === 'admin') { %>
                <br>
                <a href="/categories/create" class="btn btn-primary">Thêm danh mục đầu tiên</a>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
