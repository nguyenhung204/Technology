<%- include('../partials/header', { title: 'Sửa danh mục', activeMenu: 'categories' }) %>

<style>
    .form-card {
        background: white;
        border: 1px solid #000;
        padding: 30px;
        max-width: 600px;
        margin: 0 auto;
    }
    .form-group {
        margin-bottom: 20px;
    }
    label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
    }
    input, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #000;
        font-size: 14px;
        font-family: inherit;
    }
    input:focus, textarea:focus {
        outline: none;
        border-color: #000;
    }
    textarea {
        resize: vertical;
        min-height: 100px;
    }
    .form-actions {
        display: flex;
        gap: 10px;
        margin-top: 30px;
    }
    .error {
        background: white;
        color: #000;
        padding: 12px;
        margin-bottom: 20px;
        border: 2px solid #000;
    }
</style>

<div class="form-card">
    <h1 style="margin-bottom: 30px;">Sửa danh mục</h1>

    <% if (error) { %>
        <div class="error"><%= error %></div>
    <% } %>

    <form action="/categories/<%= category.id %>" method="POST">
        <div class="form-group">
            <label for="name">Tên danh mục: <span style="color: red;">*</span></label>
            <input type="text" id="name" name="name" value="<%= category.name %>" required autofocus>
        </div>

        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea id="description" name="description"><%= category.description || '' %></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="/categories" class="btn" style="background: white; color: #000; border: 1px solid #000;">Hủy</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>
